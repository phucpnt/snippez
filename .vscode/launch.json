  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Test",
      "program": "${workspaceRoot}/node_modules/.bin/jasmine",
      "cwd": "${workspaceRoot}",
      "args": [ "JASMINE_CONFIG_PATH=jasmine.json", "${relativeFile}" ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "address": "localhost",
      "port": 5858
    }
  ]
}
